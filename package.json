{
    "name": "linker-ng",
    "displayName": "Linker NG",
    "description": "Create links to fragments of code in GitHub",
    "version": "0.0.3",
    "publisher": "pryorda",
    "engines": {
        "vscode": "^1.34.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pryorda/linker-ng.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:githublinker.copyLink",
        "onCommand:githublinker.copyMarkdown"
    ],
    "main": "./out/extension",
    "icon": "icon.png",
    "contributes": {
        "commands": [
            {
                "when": "editorHasSelection",
                "command": "githublinker.copyLink",
                "title": "Linker NG: Copy link to selection"
            },
            {
                "when": "editorHasSelection",
                "command": "githublinker.copyMarkdown",
                "title": "Linker NG: Copy link to selection and code as markdown"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "githublinker.copyLink",
                    "group": "9_cutcopypaste"
                },
                {
                    "when": "editorHasSelection",
                    "command": "githublinker.copyMarkdown",
                    "group": "9_cutcopypaste"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "package": "rm *.vsix ; vsce package",
        "local-install": "code --install-extension *.vsix --force"

    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@types/clipboardy": "^1.1.0",
        "@types/ini": "^1.3.30",
        "clipboardy": "^1.2.3",
        "ini": "^1.3.5"
    }
}
